<div class="container">
  <div class="row m-3">
    <div class="col-sm">
      <h1 class="text-center">Sandwich Samsara</h1>
    </div>
  </div>
  
</div>

<div class="container">
  <div class="row">
    
    <div class="col-sm-3 mt-3 mb-3">
        <h2> Build a Burger</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
          </div>

          <div class="form-group">
            <label for="eaten">Burger Status </label><br>
            <input type="radio" name="eaten" value="1" checked> Needs to be Cooked<br>
            <input type="radio" name="eaten" value="0"> Already Eaten
          </div>

          <button type="submit">Build Burger</button>
        </form>
    </div>
    <div class="col-sm-9 mt-3 mb-3"><img src="/assets/BurgerCollage.PNG" alt="Italian Trulli"></div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h2 class="text-center">Burgers in Dining Area</h2>

      <ul>
        {{#each burgers}}
          {{#unless eaten}}
            {{> burgers/burger-block eat=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-sm-6">
      <h2 class="text-center">Burgers in the Kitchen</h2>

      <ul>
        {{#each burgers}}
          {{#if eaten}}
            {{> burgers/burger-block eat=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>


